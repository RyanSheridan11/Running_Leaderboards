<h1>Edit Race Deadline</h1>

<div class="admin-controls">
  <%= link_to "← Back to Race Deadlines", admin_race_deadlines_path, class: "btn btn-secondary" %>
  <%= link_to "← Back to Dashboard", admin_dashboard_path, class: "btn btn-outline-secondary" %>
</div>

<%= form_with model: [:admin, @race_deadline], local: true, class: "form-container" do |form| %>
  <div class="form-group">
    <%= form.label :race_type, "Race Type" %>
    <%= form.select :race_type,
        options_for_select([["5k", "5k"], ["Bronco (1.2k)", "bronco"]], @race_deadline.race_type),
        {},
        { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "Start Date" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, "Due Date" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Race Deadline", class: "btn btn-primary" %>
  </div>
<% end %>
