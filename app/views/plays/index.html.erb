<div class="plays-header">
  <h1>🏆 Top 10 Plays</h1>
  <% if logged_in? %>
    <div class="plays-actions">
      <%= link_to "Submit New Play", new_play_path, class: "btn btn-primary" %>
      <%= link_to "Vote on Plays", vote_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<div class="top-plays-section">
  <% if @top_plays.any? %>
    <div class="plays-leaderboard">
      <% @top_plays.each_with_index do |play, index| %>
        <div class="play-card rank-<%= index + 1 %>">
          <div class="play-rank">
            <span class="rank-number">#<%= index + 1 %></span>
            <span class="play-score"><%= play.score %> pts</span>
          </div>

          <div class="play-content">
            <h3 class="play-title"><%= play.title %></h3>
            <p class="play-author">by <%= play.user.username %></p>

            <% if play.description.present? %>
              <p class="play-description"><%= play.description %></p>
            <% end %>

            <% if play.video_url.present? && play.youtube_embed_url %>
              <div class="play-video">
                <iframe
                  width="320"
                  height="180"
                  src="<%= play.youtube_embed_url %>"
                  title="<%= play.title %>"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  allowfullscreen>
                </iframe>
              </div>
            <% end %>

            <div class="play-meta">
              <span class="play-date">Submitted <%= play.created_at.strftime("%B %d, %Y") %></span>
              <span class="play-votes"><%= play.votes.count %> votes</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No plays yet!</h2>
      <p>Be the first to submit an amazing play.</p>
      <% if logged_in? %>
        <%= link_to "Submit the First Play", new_play_path, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Login to Submit", login_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>
