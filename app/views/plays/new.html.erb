<div class="form-container">
  <h1>ðŸŽ¬ Submit New Play</h1>

  <%= form_with model: @play, local: true, class: "play-form" do |form| %>
    <% if @play.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@play.errors.count, "error") %> prohibited this play from being saved:</h4>
        <ul>
          <% @play.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Play Title*" %>
      <%= form.text_field :title, placeholder: "e.g., Amazing comeback sprint finish",
                         class: "form-control", maxlength: 100 %>
      <small class="form-text">Give your play a descriptive title</small>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, rows: 4,
                        placeholder: "Describe what makes this play special...",
                        class: "form-control", maxlength: 500 %>
      <small class="form-text">Optional: Add context about what happened (max 500 characters)</small>
    </div>

    <div class="form-group">
      <%= form.label :event_id, "Event *" %>
      <%= form.select :event_id,
            options_from_collection_for_select(@events, :id, :name, @play.event_id),
            { prompt: 'Select an Event' },
            class: 'form-control' %>
      <small class="form-text">Choose the event this play belongs to</small>
    </div>

    <div class="form-group">
      <%= form.label :video_url, "YouTube Video URL" %>
      <%= form.url_field :video_url,
                        placeholder: "https://www.youtube.com/watch?v=...",
                        class: "form-control" %>
      <small class="form-text">
        Optional: Link to a YouTube video of the play.
        Supported formats: youtube.com/watch?v=... or youtu.be/...
      </small>
    </div>

    <div class="form-actions">
      <%= form.submit "Submit Play", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

