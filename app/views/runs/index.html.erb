<h1>5k Leaderboard</h1>

<% if logged_in? %>
  <p>Welcome, <%= current_user.username %>! <%= link_to "Add Run", new_run_path %> | <%= link_to "Log out", logout_path, method: :delete %></p>
<% else %>
  <p><%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Runner</th>
      <th>Date</th>
      <th>Time (seconds)</th>
    </tr>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.user.username %></td>
        <td><%= run.date %></td>
        <td><%= run.time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
