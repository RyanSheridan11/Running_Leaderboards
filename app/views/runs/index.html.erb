<h1>5k Leaderboard</h1>

<table>
  <thead>
    <tr>
      <th>Runner</th>
      <th>Date</th>
      <th>Time</th>
      <% if logged_in? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.user.username %></td>
        <td><%= run.date %></td>
        <td><%= format_time(run.time) %></td>
        <% if logged_in? %>
          <td>
            <% if current_user == run.user %>
              <div class="table-actions">
                <%= link_to "Edit", edit_run_path(run), class: "btn btn-small" %>
                <%= link_to "Delete", run_path(run), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-small btn-danger" %>
              </div>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
