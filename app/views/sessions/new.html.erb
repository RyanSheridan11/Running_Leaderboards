<h1>Log In</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>
<p>Don't have an account? <%= link_to "Sign up", new_user_path %></p>
