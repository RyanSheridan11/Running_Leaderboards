<div class="form-container">
  <h1>ðŸ”‘ Set Up Your Password</h1>
  <p class="form-description">
    Welcome <strong><%= @user.full_name %></strong>! Please set up a password for your account to continue.
  </p>

  <%= form_with url: setup_password_path, local: true, class: "password-form" do |form| %>
    <div class="form-group">
      <%= form.label :password, "Password*" %>
      <%= form.password_field :password, required: true, minlength: 4, class: "form-control", placeholder: "Create a secure password" %>
      <small class="form-text">Password must be at least 4 characters long</small>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password*" %>
      <%= form.password_field :password_confirmation, required: true, minlength: 4, class: "form-control", placeholder: "Re-enter your password" %>
      <small class="form-text">Must match the password above</small>
    </div>

    <div class="form-actions">
      <%= form.submit "Set Password", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="submission-info">
  <h3>ðŸ“‹ Password Requirements</h3>
  <ul>
    <li>Minimum 4 characters required</li>
    <li>Choose something secure but memorable</li>
    <li>You'll use this password to log in going forward</li>
  </ul>
</div>
