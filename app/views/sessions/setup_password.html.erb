<h1>Set Up Your Password</h1>

<div class="password-setup-intro">
  <p>Welcome <%= @user.full_name %>!</p>
  <p>Please set up a password for your account to continue.</p>
</div>

<%= form_with url: setup_password_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :password, "Password" %><br>
    <%= form.password_field :password, required: true, minlength: 4 %>
    <small class="form-text">Password must be at least 4 characters long</small>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password" %><br>
    <%= form.password_field :password_confirmation, required: true, minlength: 4 %>
  </div>

  <div class="form-actions">
    <%= form.submit "Set Password", class: "btn btn-primary" %>
  </div>
<% end %>

<style>
  .password-setup-intro {
    background-color: #e8f4fd;
    border: 1px solid #b8daff;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 2rem;
  }

  .password-setup-intro p {
    margin: 0;
    color: #004085;
  }

  .password-setup-intro p:first-child {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    font-weight: bold;
    color: #333;
    margin-bottom: 0.5rem;
    display: block;
  }

  .form-group input[type="password"] {
    width: 100%;
    max-width: 300px;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 0.25rem;
    font-size: 1rem;
  }

  .form-group input[type="password"]:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
  }

  .form-text {
    color: #666;
    font-size: 0.875rem;
    margin-top: 0.25rem;
    display: block;
  }

  .form-actions {
    margin-top: 2rem;
  }

  .btn {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 0.25rem;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
  }

  .btn:hover {
    background-color: #0056b3;
  }
</style>
