<div class="profile-header">
  <h1>
    <%= @user.full_name %>'s Profile
  </h1>
  <% if @user.strava_username.present? %>
    <p class="strava-username">üèÉ‚Äç‚ôÇÔ∏è <%= @user.strava_username %></p>
  <% end %>
  <% if @user.admin? %>
    <span class="admin-badge">Admin</span>
  <% end %>
</div>

<div class="profile-stats">
  <div class="stat-card">
    <h3><%= @user.runs.count %></h3>
    <p>Total Runs</p>
  </div>

  <div class="stat-card">
    <h3><%= @user.runs.where(race_type: "5k").count %></h3>
    <p>5k Runs</p>
  </div>

  <div class="stat-card">
    <h3><%= @user.runs.where(race_type: "bronco").count %></h3>
    <p>Bronco Runs</p>
  </div>

  <div class="stat-card">
    <% best_5k = @user.runs.where(race_type: "5k").order(:time).first %>
    <h3><%= best_5k ? format_time(best_5k.time, "5k") : "N/A" %></h3>
    <p>Best 5k Time</p>
  </div>

  <div class="stat-card">
    <% best_bronco = @user.runs.where(race_type: "bronco").order(:time).first %>
    <h3><%= best_bronco ? format_time(best_bronco.time, "bronco") : "N/A" %></h3>
    <p>Best Bronco Time</p>
  </div>
</div>

<div class="runs-section">
  <h2><%= @user.full_name %>'s Runs</h2>

  <% if @runs.any? %>
    <div class="table-container">
      <table class="leaderboard-table">
        <thead>
          <tr>
            <th>Race Type</th>
            <th>Time</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @runs.each do |run| %>
            <tr>
              <td>
                <div class="race-type-with-source">
                  <span class="race-type-badge <%= run.race_type %>">
                    <%= run.race_type.upcase %>
                  </span>
                  <% if run.from_strava? %>
                    <span class="strava-icon" title="Synced from Strava">üèÉ‚Äç‚ôÇÔ∏è</span>
                  <% end %>
                </div>
              </td>
              <td><%= format_time(run.time, run.race_type) %></td>
              <td><%= run.date.strftime("%B %d, %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <p><%= @user.full_name %> hasn't recorded any runs yet.</p>
    </div>
  <% end %>
</div>

<div class="back-link">
  <%= link_to "‚Üê Back to Leaderboard", root_path, class: "btn btn-secondary" %>
</div>

